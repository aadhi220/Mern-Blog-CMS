{
  "version": 2,
  "builds": [
    {
      "src": "src/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "src/**/*.jsx",
      "use": "build",
      "config": {
        "distDir": "dist/client"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/src/api/$1"
    },
    {
      "src": "^/static/(.*)",
      "dest": "/src/static/$1"
    },
    {
      "src": "/(.*)\\.png",
      "dest": "/src/$1.png"
    },
    {
      "src": "/(.*)",
      "dest": "/src/index.html"
    }
  ]
}
